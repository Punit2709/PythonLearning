    "import time\n",
    "def countdown(count):\n",
    "    print(\"Count: \", count)\n",
    "    time.sleep(1)\n",
    "    if(count == 0):\n",
    "        return 0\n",
    "    if count%2 == 0:\n",
    "        countdown(count // 2)\n",
    "    else:\n",
    "        countdown(count - 1)    "
   ]
